<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.marijaradisavljevic.restoranadminmarija">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.LoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="nosensor"
            android:noHistory="true"
            android:launchMode="singleTop"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.marijaradisavljevic.restoranadminmarija.activity.ActivityDetails"
            android:configChanges="keyboardHidden|orientation"
            android:noHistory="true"
            android:screenOrientation="nosensor">
        </activity>
        <activity
            android:name="com.example.marijaradisavljevic.restoranadminmarija.activity.ActivityMainList"
            android:screenOrientation="nosensor"
            android:launchMode="singleTop"
            >
        </activity>
        Activity_Selection_And_ListReservation
        <activity
            android:name="com.example.marijaradisavljevic.restoranadminmarija.activity.Activity_Selection_And_ListReservation"
            android:configChanges="keyboardHidden|orientation"
            android:noHistory="true"
            android:screenOrientation="nosensor">
        </activity>


        <activity
            android:name="com.example.marijaradisavljevic.restoranadminmarija.activity.ActivityHost"
            android:configChanges="keyboardHidden|orientation"
            android:noHistory="true"
            android:screenOrientation="nosensor">
        </activity>
    </application>

</manifest>
