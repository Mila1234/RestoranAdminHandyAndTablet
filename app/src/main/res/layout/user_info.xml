<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/rezervation_color_background"
    android:padding="@dimen/padding_margin"
    android:orientation="vertical">

    <TextView android:id = "@+id/typAndName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konobar : Marija"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />

    <TextView android:id = "@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mairjadsdfsdf.com"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/typAndName"
        android:layout_above="@+id/remove"
        android:layout_alignParentRight="false"
      />



    <TextView android:id = "@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sifrasdasdasd"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/user_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"



      />

    <TextView android:id = "@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="marija@asdalksd.com"
        android:layout_below="@+id/password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
         />
    <TextView android:id = "@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="marija@asdalksd.com"
        android:layout_below="@+id/password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
android:visibility="gone"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        />



    <TextView android:id = "@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0688883789"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        />



    <Button  android:id="@+id/edit"
        android:layout_marginRight="@dimen/activity_small_padding"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit"
        android:background="@drawable/shape_of_button"
        android:textColor="@color/white"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignLeft="@+id/remove"
        android:layout_alignStart="@+id/remove" />

    <Button  android:id="@+id/remove"
        android:layout_marginLeft="@dimen/activity_small_padding"
        android:layout_marginRight="@dimen/activity_small_padding"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remove"
        android:background="@drawable/shape_of_button"
        android:textColor="@color/white"

        android:layout_below="@+id/edit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"


        style="@style/Widget.AppCompat.Button.Colored" />






</RelativeLayout>
